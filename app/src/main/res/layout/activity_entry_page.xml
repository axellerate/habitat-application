<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_entry_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.habitatapi.habit.EntryPageActivity"
    android:background="@drawable/mountain_sky">

    <Button
        android:text="Get Started"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:id="@+id/get_started_btn"
        android:background="@drawable/transparent_button"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="onClickGetStarted"/>

    <ImageView
        android:layout_width="300dp"
        android:src="@drawable/habitat_logo"
        android:id="@+id/habitat_logo"
        android:scaleType="fitXY"
        android:layout_height="120dp"
        android:cropToPadding="false"
        android:layout_above="@+id/get_started_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp" />
</RelativeLayout>